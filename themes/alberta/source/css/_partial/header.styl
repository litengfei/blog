#header
  height: 10em
  position: relative
  &:before, &:after
    content: ""
    position: absolute
    left: 0
    right: 0
    height: 40px
  &:before
    top: 0
  &:after
    bottom: 0

#header-outer
  height: 100%
  top: 2em
  position: relative

#header-title
  text-align: center
  position: absolute
  top: 10%
  left: 0px
  margin-top: logo-size * -0.5

#header-inner
  text-align: center
  position: relative
  width: 100%
  top: 20%
  left: 0px

#header-menu
  width: 100%
  position: relative
  top: 60%
  z-index: 2

$logo-text
  text-decoration: none
  color: black
  font-weight: 300
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3)

#logo
  @extend $logo-text
  font-size: logo-size
  letter-spacing: 2px

#subtitle
  @extend $logo-text
  font-size: subtitle-size
  line-height: subtitle-size
  letter-spacing: 1px

#subtitle-wrap
  margin-top: subtitle-size

#main-nav
  text-align: center

#main-nav ul li
  display: inline-block

$nav-link
  display: inline-block
  color: black
  opacity: 0.6
  text-decoration: none
  text-shadow: 0 1px rgba(0, 0, 0, 0.2)
  transition: opacity 0.2s
  padding: 20px 15px
  &:hover
    opacity: 1

.icon-setting
  color: color-nav-icon
  font-size: 30px
  padding: 0px 15px
  cursor: pointer
  opacity: 0.6
  &:hover
    opacity: 1

.nav-icon
  @extend $nav-link
  font-family: font-icon
  text-align: center
  font-size: 20px
  width: font-size
  height: font-size
  padding: 20px 15px
  cursor: pointer

.main-nav-link
  @extend $nav-link
  font-weight: 300
  letter-spacing: 1px
  @media mq-mobile
    display: none

#main-nav-toggle
  display: none
  &:before
    content: "\f0c9"
  @media mq-mobile
    display: block
