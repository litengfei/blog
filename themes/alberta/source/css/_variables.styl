// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Colors
color-nav-icon = #5C97BF
color-default = black
color-grey = #999
color-border = #ddd
color-link = #258fb8
color-sidebar-text = #777
color-widget-background = #ddd
color-widget-border = #ccc
color-footer-background = url("http://xuelangzf-github.qiniudn.com/footer.png")
color-mobile-nav-background = #191919
color-twitter = #00aced
color-facebook = #3b5998
color-pinterest = #cb2027
color-google = #dd4b39

// Fonts
font-sans = "Apple LiGothic Medium", "Microsoft JhengHei"
font-serif = "Apple LiGothic Medium", "Microsoft JhengHei"
font-mono = Monaco, "Source Code Pro", Consolas, Menlo, Consolas, monospace
font-icon = FontAwesome
font-icon-path = "fonts/fontawesome-webfont"
font-icon-version = "4.0.3"
font-size = 1em
line-height = 1.6em
line-height-title = 1.1em

// Header
logo-size = 2.5em
subtitle-size = 1em
banner-height = 400px
sidebar = hexo-config("sidebar")

// Layout
block-margin = 3em
article-padding = 1em
mobile-nav-width = 280px
main-column = 7
sidebar-column = 3

if sidebar and sidebar isnt bottom
  _sidebar-column = sidebar-column
else
  _sidebar-column = 1

// Grids
column-width = 80px
gutter-width = 20px
columns = main-column + _sidebar-column

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"
